<UserControl x:Class="SchoolTVController.PresetViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolTVController"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid Background="White">
        <TextBlock x:Name="PresetNameTextBlock" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" TextWrapping="Wrap" Text="UnSetted" VerticalAlignment="Top" Width="109" Background="White" FontSize="22"/>
        <Button x:Name="EditButton" Content="Edit" HorizontalAlignment="Left" Margin="248,10,0,0" VerticalAlignment="Top" Width="42" Height="30" Click="EditButton_Click"/>
        <Button x:Name="SelectPresetButton" Content="(Un)Select" HorizontalAlignment="Left" Margin="104,10,0,0" VerticalAlignment="Top" Width="139" Height="30" Click="SelectPresetButton_Click"/>

    </Grid>
</UserControl>
